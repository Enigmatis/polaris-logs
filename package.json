{
  "name": "@enigmatis/polaris-logs",
  "version": "0.5.0",
  "description": "A logging library",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "setup": "npm install",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build-watch": "tsc --watch -p tsconfig.json",
    "clean": "shx rm -rf node_modules/ dist/ docs/",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./src/",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "buildDependents": "npm i && tsc && npm link",
    "prepare": "npm run lint:fix && npm run rebuild",
    "lint": "npm run tslint-check && tslint -p .",
    "lint:fix": "npm run tslint-check && tslint -p . --fix",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "pre-commit": [
    "lint:fix"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Enigmatis/polaris-logs.git"
  },
  "keywords": [
    "polaris-logs"
  ],
  "author": "Enigmatis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Enigmatis/polaris-logs/issues"
  },
  "homepage": "https://github.com/Enigmatis/polaris-logs#readme",
  "dependencies": {
    "@types/node": "10.12.12",
    "@types/winston": "^2.4.4",
    "clean-deep": "^3.0.2",
    "rimraf": "^2.6.2",
    "winston": "^3.1.0",
    "winston-logstash-transport": "^2.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "shx": "^0.3.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-consistent-codestyle": "^1.14.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.14.1",
    "typescript": "^3.2.2",
    "winston-transport": "^4.3.0"
  }
}
